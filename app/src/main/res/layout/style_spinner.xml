<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="@dimen/_4sdp">

    <TextView
        android:id="@+id/titleTVContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bt_uidesign_login"
        android:gravity="center"
        android:padding="@dimen/_8sdp"
        android:layout_margin="@dimen/_5sdp"
        android:text="Title"
        android:textColor="@color/white"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imagedown"
        android:src="@drawable/ic_baseline_arrow_drop_down_circle_24"
        app:layout_constraintTop_toTopOf="@id/titleTVContainer"
        app:layout_constraintHorizontal_bias=".95"
        app:layout_constraintEnd_toEndOf="@id/titleTVContainer"
        app:layout_constraintStart_toStartOf="@id/titleTVContainer"
        app:layout_constraintBottom_toBottomOf="@id/titleTVContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:contentDescription="TODO" />

</androidx.constraintlayout.widget.ConstraintLayout>