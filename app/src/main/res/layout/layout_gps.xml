<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#2D2942"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:ignore="MissingConstraints">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/currentLocation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_gravity="center"
        android:elevation="2dp"
        app:layout_constraintBottom_toTopOf="@id/byApp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/gps"
        tools:ignore="MissingConstraints" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_marginBottom="@dimen/_8sdp"
        android:drawableEnd="@drawable/ic_baseline_sports_basketball_24"
        android:text="@string/enable_gps"
        android:textAlignment="center"
        android:textColor="@color/colorOrange"
        android:textSize="@dimen/_12ssp"
        android:textStyle="bold"
        app:drawableStartCompat="@drawable/ic_baseline_sports_basketball_24" />

    <TextView
        android:layout_marginBottom="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enable_gps_chrome"
        android:textAlignment="viewStart"
        android:textColor="@color/white"
        android:textSize="@dimen/_10ssp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/googleChrome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="https://maps.google.com.eg/"
        android:textColor="@color/colorCyan"
        android:textSize="@dimen/_10ssp" />

</LinearLayout>